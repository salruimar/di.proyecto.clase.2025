<UserControl x:Class="di.proyecto.clase._2025.Frontend.Dialogos.UCArticulos"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:di.proyecto.clase._2025.Frontend.Dialogos"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="800">
    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <ToolBar>
                <!--Agregar modelo artículo-->

                <Button x:Name="btnAgregarModelo" ToolTip="Agregar ModeloArticulo" Click="btnAgregarModelo_Click">
                    <StackPanel>
                        <TextBlock Text="Modelos de Artículo" VerticalAlignment="Center" Margin="0,0,0,5"/>
                        <mat:PackIcon Kind="PlusBoxMultipleOutline" HorizontalAlignment="Center"/>
                    </StackPanel>

                </Button>
                <Button x:Name="btnAgregarArticulo" ToolTip="Agregar Articulo" Click="btnAgregarArticulo_Click" >
                    <StackPanel>
                        <TextBlock Text="Artículo" VerticalAlignment="Center" Margin="0,0,0,5"/>
                        <mat:PackIcon Kind="PlusBoxMultipleOutline" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

            </ToolBar>
        </Grid>
        <Grid>
            
        </Grid>
    </DockPanel>
</UserControl>
