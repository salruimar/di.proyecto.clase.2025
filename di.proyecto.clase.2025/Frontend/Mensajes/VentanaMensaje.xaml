<Window x:Class="DI.tema2.ejercicio7.Frontend.Mensajes.VentanaMensaje"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DI.tema2.ejercicio7.Frontend.Mensajes"
        mc:Ignorable="d"
        AllowsTransparency="True" WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        x:Name="ventanaDialogoMensaje"
        Loaded="ventanaDialogoMensaje_Loaded"
        Height="500" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Border x:Name="borderMensaje" Grid.Row="0">
            <Image x:Name="imgMensaje" HorizontalAlignment="Center"
                   Margin="0,20,0,10"
                   Width="250"
                   Stretch="Uniform"/>
        </Border>
        <TextBlock x:Name="tbTitulo" Grid.Row="1" Margin="20"
                   TextWrapping="WrapWithOverflow"
                   HorizontalAlignment="Center"
                   FontSize="24" FontWeight="Bold"/>
        <TextBlock x:Name="tbMensaje"
                   FontSize="16"
                   TextWrapping="Wrap"
                   Margin="20,0,20,20" HorizontalAlignment="Center"
                   Grid.Row="2" />
        <Button x:Name="Aceptar"
                Click="Aceptar_Click"
                Width="200"
                Content="Aceptar"
                Margin="20"
                Grid.Row="3"
                Background="Indigo"/>
    </Grid>
</Window>